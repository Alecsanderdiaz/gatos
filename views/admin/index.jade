extends ../layout.jade
block contenido
	h1 Panel de Administración - 
		a(href="/menu/new") Agregar Producto
	table(class="table")
		caption Productos Actuales
		thead
			tr
				th #
				th Nombre
				th Descripción
				th Precio
				th Imagenes
				th Acciones
		tbody
			each product in products
				tr
					td= product.id
					td= product.title
					td= product.description
					td= product.pricing
					td
						if product.imageUrl == "data.png"
							p No hay imagen
						else
							a(href="#{product.imageUrl}" class="btn") Ver Imagen
					td 
						a(href="/menu/edit/#{product.id}" ) Editar
						=" - "
						a(href="/menu/#{product.id}/delete" ) Eliminar